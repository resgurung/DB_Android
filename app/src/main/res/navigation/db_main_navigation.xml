<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/db_main_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="co.deshbidesh.db_android.OnboardingFeature.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_onboardingViewPager"
            app:destination="@id/onboardingViewPager"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/onboardingViewPager"
        android:name="co.deshbidesh.db_android.OnboardingFeature.OnboardingViewPager"
        android:label="fragment_onboarding_view_pager"
        tools:layout="@layout/fragment_onboarding_view_pager" >
        <action
            android:id="@+id/action_onboardingViewPager_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/onboardingViewPager"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/calendarFragment"
        android:name="co.deshbidesh.db_android.DBCalendarFeature.CalendarFragment"
        android:label="Calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/dictionaryFragment"
        android:name="co.deshbidesh.db_android.DBDictionaryFeature.DictionaryFragment"
        android:label="Dictionary"
        tools:layout="@layout/fragment_dictionary" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="co.deshbidesh.db_android.DBHomeFeature.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="co.deshbidesh.db_android.DBSettingsFeature.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>