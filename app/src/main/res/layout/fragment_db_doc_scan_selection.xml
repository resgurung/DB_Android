<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyish"
        tools:context=".db_document_scanner_feature.ui.fragment.DBDocScanSelectionFragment">

        <LinearLayout
            android:id="@+id/selection_button_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="@color/black"
                card_view:cardElevation="5dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doc_scan_selection_fragment_camera_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:drawableTop="@android:drawable/ic_menu_camera"
                    android:textColor="@android:color/white"
                    android:text="Camera"
                    style="?attr/borderlessButtonStyle" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="@color/black"
                card_view:cardElevation="5dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doc_scan_selection_fragment_gallery_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:drawableTop="@android:drawable/ic_menu_gallery"
                    android:textColor="@android:color/white"
                    android:text="Gallery"
                    style="?attr/borderlessButtonStyle"
                    />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </RelativeLayout>
</layout>
