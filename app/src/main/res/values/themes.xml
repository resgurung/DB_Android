<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light application theme. -->
    <style name="Theme.DeshBidesh" parent="Base.Theme.DeshBidesh">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/background_color_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/design_default_color_secondary</item>
        <item name="colorSecondaryVariant">@color/design_default_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/design_default_color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>

    </style>


    <!-- Base application theme. / Default theme -->
    <style name="Base.Theme.DeshBidesh" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/background_color_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/design_default_color_secondary</item>
        <item name="colorSecondaryVariant">@color/design_default_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/design_default_color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>

    </style>


    <!-- Bottom navigation light style -->
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/colorAccent</item>
        <item name="itemTextColor">@color/bottom_nav_item_light_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_light_color</item>
    </style>

    <style name="AlertPopupButtonLightTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/black</item>
    </style>

    <!-- Docscan theme -->
    <style name="Theme.DeshBideshDocScan" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/greyish</item>
        <item name="colorPrimaryVariant">@color/dark_greyish</item>
        <item name="colorOnPrimary">@color/background_color_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/design_default_color_secondary</item>
        <item name="colorSecondaryVariant">@color/design_default_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/design_default_color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ThemeOverlay.DB_Android.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">#000000</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.DeshBidesh.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DeshBidesh.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DeshBidesh.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>